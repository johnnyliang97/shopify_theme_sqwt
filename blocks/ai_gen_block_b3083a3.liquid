{% doc %}
  @prompt
    make an email subscribe block, there's error shown on line 115
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-email-subscribe-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-email-subscribe__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-email-subscribe__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 12px;
    font-weight: 700;
  }

  .ai-email-subscribe__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 24px;
    line-height: 1.5;
  }

  .ai-email-subscribe__form-wrapper-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-email-subscribe__field-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .ai-email-subscribe__input-{{ ai_gen_id }} {
    flex: 1;
    min-width: 250px;
    padding: 14px 20px;
    border: {{ block.settings.input_border_thickness }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 14px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
  }

  .ai-email-subscribe__input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_text_color }};
    opacity: 0.6;
  }

  .ai-email-subscribe__button-{{ ai_gen_id }} {
    padding: 14px 32px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }

  .ai-email-subscribe__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-email-subscribe__success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    font-size: 14px;
    margin-top: 8px;
  }

  .ai-email-subscribe__error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    font-size: 14px;
    margin-top: 8px;
  }

  @media screen and (max-width: 749px) {
    .ai-email-subscribe__field-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-email-subscribe__input-{{ ai_gen_id }} {
      min-width: 100%;
    }

    .ai-email-subscribe__button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-email-subscribe-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-email-subscribe__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-email-subscribe__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-email-subscribe__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% form 'customer' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      
      <div class="ai-email-subscribe__form-wrapper-{{ ai_gen_id }}">
        <div class="ai-email-subscribe__field-{{ ai_gen_id }}">
          <input
            type="email"
            name="contact[email]"
            class="ai-email-subscribe__input-{{ ai_gen_id }}"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="ai-email-subscribe-error-{{ ai_gen_id }}"
            {% endif %}
            {% if form.posted_successfully? %}
              aria-describedby="ai-email-subscribe-success-{{ ai_gen_id }}"
            {% endif %}
            placeholder="{{ block.settings.email_placeholder }}"
            required
          >
          <button
            type="submit"
            class="ai-email-subscribe__button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </button>
        </div>

        {% if form.errors %}
          <div
            id="ai-email-subscribe-error-{{ ai_gen_id }}"
            class="ai-email-subscribe__error-{{ ai_gen_id }}"
          >
            {{ form.errors.messages.email }}
          </div>
        {% endif %}

        {% if form.posted_successfully? %}
          <div
            id="ai-email-subscribe-success-{{ ai_gen_id }}"
            class="ai-email-subscribe__success-{{ ai_gen_id }}"
          >
            {{ block.settings.success_message }}
          </div>
        {% endif %}
      </div>
    {% endform %}
  </div>
</div>

