      "id": "subtext_text",
      "label": "Subtext"
    },
    {
      "type": "range",
      "id": "header_font_size",
      "min": 16,
      "max": 72,
      "step": 1,
      "unit": "px",
      "label": "Header font size",
      "default": 36
    },
    {
      "type": "color",
      "id": "header_color",
      "label": "Header color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "subtext_font_size",
      "min": 12,
      "max": 36,
      "step": 1,
      "unit": "px",
      "label": "Subtext font size",
      "default": 16
    },
    {
      "type": "color",
      "id": "subtext_color",
      "label": "Subtext color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
