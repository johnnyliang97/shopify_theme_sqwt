{% doc %}
  @prompt
    mega image section (different image options on desktop and mobile view) with a white btn black font inside the image's bottom centre

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-mega-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-mega-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .ai-mega-image-desktop-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-mega-image-mobile-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: none;
  }

  .ai-mega-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-mega-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .ai-mega-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-mega-image-button-{{ ai_gen_id }} {
    position: absolute;
    bottom: {{ block.settings.button_bottom_spacing }}px;
    left: 50%;
    transform: translateX(-50%);
    background-color: #ffffff;
    color: #000000;
    border: none;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: bold;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 2;
  }

  .ai-mega-image-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateX(-50%) translateY(-2px);
  }

  .ai-mega-image-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 2;
    pointer-events: none;
    padding: 0 20px;
    width: 100%;
    max-width: 90%;
  }

  .ai-mega-image-header-{{ ai_gen_id }} {
    font-size: {{ block.settings.header_font_size }}px;
    color: {{ block.settings.header_color }};
    font-weight: 700;
    margin-bottom: 8px;
  }

  .ai-mega-image-subtext-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtext_font_size }}px;
    color: {{ block.settings.subtext_color }};
    font-weight: 400;
  }

  @media screen and (max-width: 749px) {
    .ai-mega-image-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }

    .ai-mega-image-desktop-{{ ai_gen_id }} {
      display: none;
    }

    .ai-mega-image-mobile-{{ ai_gen_id }} {
      display: block;
    }

    .ai-mega-image-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }

    .ai-mega-image-header-{{ ai_gen_id }} {
      font-size: {{ block.settings.header_font_size | times: 0.9 }}px;
    }

    .ai-mega-image-subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-mega-image-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-mega-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.desktop_image or block.settings.mobile_image %}
      {% if block.settings.desktop_image %}
        <img
          src="{{ block.settings.desktop_image | image_url: width: 2000 }}"
          alt="{{ block.settings.desktop_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.desktop_image.width }}"
          height="{{ block.settings.desktop_image.height }}"
          class="ai-mega-image-desktop-{{ ai_gen_id }}"
        >
      {% endif %}

      {% if block.settings.mobile_image %}
        <img
          src="{{ block.settings.mobile_image | image_url: width: 1000 }}"
          alt="{{ block.settings.mobile_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.mobile_image.width }}"
          height="{{ block.settings.mobile_image.height }}"
          class="ai-mega-image-mobile-{{ ai_gen_id }}"
        >
      {% else %}
        <img
          src="{{ block.settings.desktop_image | image_url: width: 1000 }}"
          alt="{{ block.settings.desktop_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.desktop_image.width }}"
          height="{{ block.settings.desktop_image.height }}"
          class="ai-mega-image-mobile-{{ ai_gen_id }}"
        >
      {% endif %}
    {% else %}
      <div class="ai-mega-image-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-mega-image-empty-state-{{ ai_gen_id }}">
          Add desktop and mobile images to get started
        </div>
      </div>
    {% endif %}

    {% if block.settings.header_text != blank or block.settings.subtext_text != blank %}
      <div class="ai-mega-image-overlay-{{ ai_gen_id }}">
        {% if block.settings.header_text != blank %}
          <div class="ai-mega-image-header-{{ ai_gen_id }}">{{ block.settings.header_text }}</div>
        {% endif %}
        {% if block.settings.subtext_text != blank %}
          <div class="ai-mega-image-subtext-{{ ai_gen_id }}">{{ block.settings.subtext_text }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.button_text != blank %}
      {% if block.settings.button_link != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-mega-image-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% else %}
        <button class="ai-mega-image-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </button>
      {% endif %}
    {% endif %}
  </div>
</div>

