{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .media-banner-{{ section.id }} {
    position: relative;
    width: 100%;
  }

  .mbb-block-{{ section.id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .mbb-media-{{ section.id }} {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .mbb-media-{{ section.id }} img,
  .mbb-media-{{ section.id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .mbb-overlay-{{ section.id }} {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .mbb-block-{{ section.id }}::after {
    content: '';
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .mbb-content-{{ section.id }} {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 0.75rem;
    padding: 1.5rem;
    z-index: 2;
  }

  .mbb-ratio-{{ section.id }} { aspect-ratio: {{ section.settings.mobile_ratio }}; }
  @media screen and (min-width: 750px) {
    .mbb-ratio-{{ section.id }} { aspect-ratio: {{ section.settings.desktop_ratio }}; }
  }
{%- endstyle -%}

{% liquid
  assign container_class = ''
  case section.settings.container
    when 'page'
      assign container_class = 'page-width'
    when 'narrow'
      assign container_class = 'page-width page-width--narrow'
    else
      assign container_class = ''
  endcase
%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding media-banner-{{ section.id }}">
    <div class="{{ container_class }}">
      <div class="mbb-block-{{ section.id }} mbb-ratio-{{ section.id }}">
        <div class="mbb-media-{{ section.id }}">
          {%- if section.settings.bg_video != null -%}
            {{ section.settings.bg_video | video_tag: autoplay: true, loop: true, controls: false, muted: true }}
          {%- elsif section.settings.bg_image != null -%}
            {{ section.settings.bg_image | image_url: width: 3840 | image_tag: sizes: '100vw', widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840' }}
          {%- else -%}
            {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>

        

        <div class="mbb-content-{{ section.id }}">
          {%- if section.settings.heading != blank -%}
            <h2 class="mbb-heading">{{ section.settings.heading }}</h2>
          {%- endif -%}
          {%- if section.settings.subheading != blank -%}
            <div class="mbb-subheading">{{ section.settings.subheading }}</div>
          {%- endif -%}
          {%- if section.settings.button_label != blank -%}
            <a
              {%- if section.settings.button_link == blank -%}
                role="link" aria-disabled="true"
              {%- else -%}
                href="{{ section.settings.button_link }}"
              {%- endif -%}
              class="button button--primary"
            >
              {{- section.settings.button_label | escape -}}
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
  {%- if request.design_mode -%}
    <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Media banner block",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "text", "id": "subheading", "label": "Subheading" },
    { "type": "text", "id": "button_label", "label": "Button label" },
    { "type": "url", "id": "button_link", "label": "Button link" },
    { "type": "video", "id": "bg_video", "label": "Background video" },
    { "type": "image_picker", "id": "bg_image", "label": "Background image" },
    { "type": "color", "id": "overlay_color", "label": "Overlay color", "default": "#000000" },
    { "type": "range", "id": "overlay_opacity", "min": 0, "max": 100, "step": 5, "unit": "%", "label": "Overlay opacity", "default": 30 },
    { "type": "header", "content": "Ratios" },
    {
      "type": "select",
      "id": "mobile_ratio",
      "label": "Mobile ratio",
      "options": [
        { "value": "4/5", "label": "Portrait (4:5)" },
        { "value": "16/9", "label": "Landscape (16:9)" }
      ],
      "default": "16/9"
    },
    {
      "type": "select",
      "id": "desktop_ratio",
      "label": "Desktop ratio",
      "options": [
        { "value": "4/5", "label": "Portrait (4:5)" },
        { "value": "16/9", "label": "Landscape (16:9)" }
      ],
      "default": "16/9"
    },
    { "type": "header", "content": "Colors & layout" },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Container width",
      "options": [
        { "value": "full", "label": "Full width" },
        { "value": "page", "label": "Page width" },
        { "value": "narrow", "label": "Narrow" }
      ],
      "default": "page"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    }
  ],
  "presets": [
    { "name": "Media banner block" }
  ]
}
{% endschema %}
